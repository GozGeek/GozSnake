0 REM SAVE"D:GSNAKE.BAS"
1 REM LIST"D:GSNAKE.LST"
1000 REM SETUP
1010 GRAPHICS 0:POKE 752,1
1020 PX=19:PY=11:L=1:FX=INT(RND(0)*37)+1:FY=INT(RND(0)*22)+1
1025 DIM PXH(1024),PYH(1024)
1027 PXH(0)=PX:PYH(0)=PY:PHL=0
1030 POSITION PX,PY:? #6;"X";
1040 POSITION FX,FY:? #6;"#";
1050 POKE 764,6
1200 KEY=PEEK(764)
1201 POSITION 19,0:? #6;PK;
1202 REM SOUND 0,243,2,8:FOR TMP=0 TO 10:NEXT TMP:SOUND 0,0,0,0:FOR TMP=0 TO 10:NEXT TMP
1204 REM FOR TMP=1 TO 50:NEXT TMP
1205 PPX=PX:PPY=PY
1220 IF KEY=63 THEN PY=PY-1
1230 IF KEY=23 THEN PY=PY+1
1240 IF KEY=6 THEN PX=PX-1
1250 IF KEY=7 THEN PX=PX+1
1270 POSITION PX,PY:? #6;"X";
1280 IF PX=FX AND PY=FY THEN GOSUB 2000
1300 PHL=PHL+1:PXH(PHL)=PX:PYH(PHL)=PY
1310 POSITION PXH(PHL-L),PYH(PHL-L):? #6;" ";
1320 FOR T=1 TO PHL
1330 PXH(T-1)=PXH(T):PYH(T-1)=PYH(T)
1340 NEXT T
1350 PHL=L
1490 POSITION 25,0:? #6;PHL;
1500 GOTO 1200
2000 POSITION PXH(PHL-L+1),PYH(PHL-L+1):? #6;" ";
2005 L=L+1:POSITION 0,0:? #6;L;
2010 FX=INT(RND(0)*37)+1
2020 FY=INT(RND(0)*22)+1
2030 POSITION FX,FY:? #6;"#";
2200 RETURN 
